style.

  .slider {
    max-height: none;
  }

  .slider .slick-slide img {
    max-height: none;
  }

  .slider-wrapper {
    max-height: none;
    height: auto;
    margin-bottom: 30px;
  }

  .slider-progress {
    bottom: 36px;
  }


  .slider-nav-text {
    position: sticky;
    left: 0;
    bottom: 0;
    height: auto;
    background-color: rgba(0,0,0,.8);
    opacity: 1;
    padding: 10px;
  }

  .slide-text {
    line-height: auto;
    margin: 0;
  }


